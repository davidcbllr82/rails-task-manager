<blockquote>
<h1 id="task-title"><%= @task[:title] %></h1>
<p id="details-p"><%= @task.details %></p>
<p class="emoji"><%= @task.completed ? "💪🏼" : "👎🏼" %></p>
</blockquote>
<div class="container">
  <div id="left"><h3><%= link_to "🔙", tasks_path %></h3></div>
  <div id="right"><h3><%= link_to "📝", edit_task_path(@task) %></h3></div>
  <div id="center"><h3><%= link_to "☠️", task_path(@task), method: :delete %></h3></div>
</div>
